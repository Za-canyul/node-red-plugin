{
  "name" : "node-red",
  "version" : "1.0.0",
  "description" : "Plugin for Node-RED integration",
  "author" : "Alvaro Luis Bustamante",
  "license" : "MIT",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/thinger-io/node-red-plugin.git"
  },
  "metadata" : {
    "name" : "Node-RED",
    "description" : "Node-RED integration with Thinger.io",
    "image" : "https://nodered.org/about/resources/media/node-red-icon-2.png"
  },
  "tokens" : {
    "node_red_plugin" : {
      "name" : "Access from Node-RED to Thinger.io",
      "allow" : {
        "*" : "*"
      }
    }
  },
  "task" : {
    "type" : "docker",
    "image" : "thinger/node-red-plugin",
    "volumes" : {
      "data" : "/data"
    }
  }
}